{
  "name": "rate-repository-app",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint ./src/**/*.{js,jsx} App.js --no-error-on-unmatched-pattern",
    "test": "jest"
  },
  "dependencies": {
    "@apollo/client": "^4.0.9",
    "@expo/metro-config": "^0.17.4",
    "@expo/metro-runtime": "~3.1.1",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-picker/picker": "^2.11.4",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "date-fns": "^4.1.0",
    "expo": "~50.0.17",
    "expo-constants": "~15.4.6",
    "expo-linking": "^8.0.8",
    "expo-status-bar": "~1.11.1",
    "formik": "^2.4.6",
    "graphql": "^16.12.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.6",
    "react-native-dotenv": "^3.4.11",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-web": "~0.19.6",
    "react-router-native": "^6.30.0",
    "rxjs": "^7.8.2",
    "use-debounce": "^10.0.6",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/eslint-parser": "^7.28.5",
    "@eslint/js": "^9.39.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "eslint": "^9.39.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.13",
    "react-test-renderer": "^18.2.0"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|@react-navigation/.*|react-navigation|@unimodules/.*|unimodules|@expo(nent)?/.*|expo(nent)?|react-native-svg|react-router-native))"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/rate-repository-api/"
    ],
    "moduleNameMapper": {
      "^react-native/Libraries/BatchedBridge/NativeModules$": "<rootDir>/__mocks__/NativeModules.js",
      "^expo-constants$": "<rootDir>/__mocks__/expoConstants.js",
      "^expo-linking$": "<rootDir>/__mocks__/expoLinking.js"
    }
  },
  "private": true
}
